<?xml version="1.0" encoding="UTF-8"?>
<config>
  <modules>
    <Clerk_Clerk>
      <version>0.1.0</version>
    </Clerk_Clerk>
  </modules>
  <frontend>
    <routers>
      <clerk>
        <use>standard</use>
        <args>
          <module>Clerk_Clerk</module>
          <frontName>clerk</frontName>
        </args>
      </clerk>
    </routers>
  </frontend>
  <global>
    <models>
      <clerk>
        <class>Clerk_Clerk_Model</class>
        <rewrite>
          <product>Clerk_Clerk_Model_Catalog_Product</product>
        </rewrite>
      </clerk>
    </models>
    <helpers>
      <clerk>
        <class>Clerk_Clerk_Helper</class>
      </clerk>
    </helpers>
    <blocks>
      <clerk>
        <class>Clerk_Clerk_Block</class>
      </clerk>
    </blocks>
    <events>
      <checkout_cart_add_product_complete>
        <observers>
          <clerk_checkout_cart_add_product_complete>
            <type>singleton</type>
            <class>Clerk_Clerk_Model_Observer</class>
            <method>itemAddedToCard</method>
          </clerk_checkout_cart_add_product_complete>
        </observers>
      </checkout_cart_add_product_complete>
    </events>
  </global>
    <frontend>
    <layout>
      <updates>
        <clerk module="clerk">
          <file>clerk.xml</file>
        </clerk>
      </updates>
    </layout>
		<translate>
      <modules>
        <Clerk_Clerk>
          <files>
            <default>Clerk_Clerk.csv</default>
          </files>
        </Clerk_Clerk>
      </modules>
    </translate>
		<routers>
      <catalogsearch>
        <use>standard</use>
        <args>
          <modules>
            <Clerk_Clerk before="Mage_CatalogSearch">Clerk_Clerk_CatalogSearch</Clerk_Clerk>
          </modules>
        </args>
      </catalogsearch>
        <checkout>
        <use>standard</use>
        <args>
          <modules>
            <Clerk_Clerk before="Mage_Checkout">Clerk_Clerk_Checkout</Clerk_Clerk>
          </modules>
        </args>
      </checkout>
    </routers>
  </frontend>
  <default>
    <clerk>
      <settings>
        <active>0</active>
      </settings>
      <search>
        <active>0</active>
        <template>search</template>
        <load_more_text>Load more results</load_more_text>
        <no_results_text>No results found</no_results_text>
      </search>
      <livesearch>
        <active>0</active>
        <show_categories>0</show_categories>
        <template>livesearch</template>
      </livesearch>
    </clerk>
  </default>
</config>
